{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": "./tsconfig.json"
  },
  "plugins": [
    "@typescript-eslint",
    "import"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended"
  ],
  "env": {
    "node": true,
    "es2021": true
  },
  "ignorePatterns": [
    "dist/**",
    "node_modules/**",
    "campsite/**",
    "web/**",
    "archive/**",
    "state/**",
    "**/*.d.ts",
    "**/*.js",
    "**/*.mjs",
    "scripts/**"
  ],
  "rules": {
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/explicit-function-return-type": "off",
    "@typescript-eslint/no-explicit-any": "warn",
    "@typescript-eslint/no-non-null-assertion": "warn",
    "@typescript-eslint/no-empty-function": "off",
    "no-unused-vars": "off",
    "no-console": "off",
    "prefer-const": "error",
    "no-var": "error",
    "max-lines": ["warn", { "max": 500, "skipBlankLines": true, "skipComments": true }],
    "max-lines-per-function": ["warn", { "max": 100, "skipBlankLines": true, "skipComments": true }]
  },
  "overrides": [
    {
      "files": [
        "src/api/confidence_calibration.ts",
        "src/api/context_assembly.ts",
        "src/api/embeddings.ts",
        "src/api/query.ts",
        "src/api/structure_templates.ts",
        "src/api/technique_execution.ts",
        "src/api/technique_library.ts"
      ],
      "rules": {
        "no-restricted-syntax": [
          "error",
          {
            "selector": "Property[key.name=/^(confidence|weight|threshold|probability|minSimilarity|maxSimilarity|minConfidence|maxConfidence)$/] > Literal",
            "message": "Wrap quantified values with configurable()/placeholder()/calibrated()/derived()."
          }
        ]
      }
    }
  ]
}
